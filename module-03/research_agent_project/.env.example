# OpenAI API Configuration
OPENAI_API_KEY=your-openai-api-key-here

# Agent Configuration
LLM_MODEL=gpt-4
LLM_TEMPERATURE=0.0
MAX_RETRIES=2
SEARCH_LIMIT=3
MIN_VALID_RESULTS=2

# Logging
LOG_LEVEL=INFO

# Optional: Anthropic (if using Claude)
# ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Optional: Other search providers
# SERPAPI_API_KEY=your-serpapi-key-here
# GOOGLE_CSE_ID=your-google-custom-search-id
# GOOGLE_API_KEY=your-google-api-key

# Database (for persistent checkpointing)
# DATABASE_URL=postgresql://user:password@localhost/research_agent
# or
# SQLITE_PATH=checkpoints.db
